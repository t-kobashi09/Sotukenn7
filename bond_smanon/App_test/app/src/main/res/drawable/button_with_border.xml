<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- シャドウ効果 (薄い背景色で広がりを持たせる) -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#808080" /> <!-- 背景色 -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- 枠線 -->
            <corners android:radius="50dp" /> <!-- 丸みの調整 -->
            <size
                android:width="100dp"
                android:height="50dp" />
        </shape>
    </item>

    <!-- メインのボタンデザイン -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#FF7F50"
                android:endColor="#FF4500"
                android:angle="90"/> <!-- グラデーション (オレンジ色) -->
            <stroke android:color="#000000" android:width="2dp"/> <!-- 枠線 -->
            <corners android:radius="12dp"/> <!-- 角丸 -->
        </shape>
    </item>
</layer-list>
