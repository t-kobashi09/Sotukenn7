        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@null" />
    <!-- ここまで -->


    <!-- MOMENTテキスト -->
    <TextView
