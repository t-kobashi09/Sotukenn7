<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景の塗りつぶし -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E7E4E0" /> <!-- ボタンの背景色 -->
            <corners android:radius="8dp" /> <!-- 角丸 -->
        </shape>
    </item>

    <!-- 右側と下側の枠線 -->
    <item android:left="-2dp" android:top="-2dp">
        <shape android:shape="rectangle">
            <corners android:radius="7dp" /> <!-- 角丸を背景と一致させる -->
            <stroke
                android:width="5dp"
                android:color="#AAC1D0" /> <!-- 枠線の色 -->
        </shape>
    </item>

</layer-list>


